# Development Environment Configuration
# Copy this file to .env.development and update with your values

# Environment
ENV=development

# Telegram Bot Configuration
BOT_TOKEN=your_development_bot_token_here
ADMIN_TELEGRAM_ID=123456789

# Database (SQLite for development)
DATABASE_URL=sqlite:///data/bot_dev.db

# Parsing (disabled in development by default)
PARSING_ENABLED=false

# Logging (verbose in development)
LOG_LEVEL=DEBUG
LOG_FILE=logs/bot_dev.log

# Background Tasks
TASK_CHECK_INTERVAL=300
