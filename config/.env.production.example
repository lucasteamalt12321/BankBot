# Production Environment Configuration
# Copy this file to .env.production and update with your values

# Environment
ENV=production

# Telegram Bot Configuration
BOT_TOKEN=your_production_bot_token_here
ADMIN_TELEGRAM_ID=123456789

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/bankbot_prod

# Parsing (enabled in production)
PARSING_ENABLED=true

# Logging (production level)
LOG_LEVEL=INFO
LOG_FILE=logs/bot_prod.log

# Background Tasks
TASK_CHECK_INTERVAL=300
